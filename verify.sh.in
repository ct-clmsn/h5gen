failed=0
counter=0
# count files - solution courtesy of http://unix.stackexchange.com/a/90152/65370
set -- @srcdir@/*.ddl
n=`echo $#`
printf "1..$n\n"
for ddl in @srcdir@/*.ddl
do
    ok=y
    counter=`expr $counter + 1`
    basename=`basename $ddl`
    h5="${basename%.ddl}.h5"
    ./h5gen -o "$h5" $ddl || ok=n
    if test $ok = y; then
        @H5DUMP@ "$h5" | @DIFF@ -w - "$ddl" || ok=n
    fi
    rm -f "$h5"
    if test $ok = n; then
        failed=`expr $failed + 1`
        printf "not "
    fi
    printf "ok $counter - $basename\n"
done
exit $failed
