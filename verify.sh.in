function fetch_opt {
    @AWK@ -e '/^##/ { if (sub("^##[ \t]*" var "[ \t]*=[ \t]*", "")) print }' var="$1" "$2"
}

failed=0
counter=0
# count files - solution courtesy of http://unix.stackexchange.com/a/90152/65370
set -- @srcdir@/*.ddl
n=`echo $#`
printf "1..$n\n"
for ddl in @srcdir@/*.ddl
do
    ok=y
    counter=`expr $counter + 1`
    basename=`basename $ddl`
    h5="${basename%.ddl}.h5"
    ./h5gen -o "$h5" $ddl || ok=n
    if test $ok = y; then
        scratch=`mktemp`
        h5dump_opt=`fetch_opt h5dump_opt "$ddl"`
        @AWK@ -e '/^[ \t]*#/ {next} 1' "$ddl" > "$scratch"
        @H5DUMP@ $h5dump_opt "$h5" | @DIFF@ -b - "$scratch" || ok=n
        rm -f "$scratch"
    fi
    rm -f "$h5"
    test $ok = n && printf "not "
    tap_testname=`fetch_opt tap_testname "$ddl"`
    test "$tap_testname" || tap_testname="$basename"
    printf "ok $counter - $tap_testname"
    if test $ok = n; then
        tap_todo=`fetch_opt tap_todo "$ddl"`
        if test "$tap_todo"; then
            printf " # TODO $tap_todo"
        else
            failed=`expr $failed + 1`
        fi
    fi
    printf "\n"
done
exit $failed
